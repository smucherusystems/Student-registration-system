# Student Management System - Environment Configuration Template
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# ============================================
# Database Configuration
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=student_management
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_CHARSET=utf8mb4

# ============================================
# Application Configuration
# ============================================
APP_NAME="Student Management System"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# ============================================
# Session Configuration
# ============================================
SESSION_LIFETIME=120
SESSION_SECURE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# ============================================
# Security
# ============================================
# Generate a random string for encryption (32+ characters)
APP_KEY=your-secret-key-here-change-this-in-production

# ============================================
# Email Configuration (for future features)
# ============================================
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@studentmanagement.com
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# File Upload Configuration
# ============================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# ============================================
# Timezone
# ============================================
APP_TIMEZONE=UTC

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# ============================================
# Backup Configuration
# ============================================
BACKUP_PATH=backups/
BACKUP_RETENTION_DAYS=30

# ============================================
# API Configuration (for future integrations)
# ============================================
API_ENABLED=false
API_KEY=your-api-key-here

# ============================================
# Third-party Services (Optional)
# ============================================
# SMS_PROVIDER=twilio
# SMS_API_KEY=
# SMS_API_SECRET=

# PAYMENT_GATEWAY=stripe
# PAYMENT_API_KEY=
# PAYMENT_API_SECRET=

# ============================================
# Development Tools
# ============================================
# Enable query logging in development
DB_LOG_QUERIES=false

# Enable detailed error messages
DISPLAY_ERRORS=true
ERROR_REPORTING=E_ALL
